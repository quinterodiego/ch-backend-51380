<nav aria-label="Page navigation example" class="w-100 d-flex flex-column justify-content-center align-items-center">
    <ul class="pagination">
        {{#if pagination.hasPrevPage}}
        <li class="page-item">
            <a class="page-link bg-dark text-info" href="/products{{pagination.prevLink}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">{{pagination.prevPage}}</span>
            </a>
            
        </li>
        {{/if}}
        <li class="page-item"><a class="page-link bg-dark text-info" href="">{{pagination.page}} - {{pagination.totalPages}}</a></li>
        {{#if pagination.hasNextPage}}

        <li class="page-item">
            <a class="page-link bg-dark text-info" href="/products{{pagination.nextLink}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">{{pagination.nextPage}}</span>
            </a>
        </li>
        {{/if}}
    </ul>
</nav>

