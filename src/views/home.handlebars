<h1 class="text-white text-center p-5">PRODUCTOS</h1>

<table class="table table-dark w-75 m-auto">
    <thead>
        <tr>
            <th scope="col">Titulo</th>
            <th scope="col">Decripcion</th>
            <th scope="col">Categoria</th>
            <th scope="col">Imagen</th>
            <th scope="col">Precio</th>
            <th scope="col">Cod.</th>
            <th scope="col">Stock</th>
        </tr>
    </thead>
    <tbody>
        {{#each resp}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.category}}</td>
            <td><img src="{{this.thumbnail}}" width="75"/></td>
            <td>${{this.price}}</td>
            <td>{{this.code}}</td>
            <td>{{this.stock}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>