<div class="container text-center">
    <h1 class="text-white text-center p-5">TU CARRITO</h1>

    <button class="btn btn-primary" onclick="back()">Volver</button>

    <div class="row">
        <div class="cards_container d-flex flex-column align-items-center pt-5 col-sm">
            {{#each payload}}
            <div class="card bg-dark text-white flex-row mb-3" >
                <img src="{{this.thumbnail}}" class="card-img-top" style="width: 30%;" alt="...">
                <div class="card-body d-flex flex-column justify-content-center bg-secondary align-items-center w-50">
                    <div class="d-flex align-items-center justify-content-between w-100">
                        <h4 class="card-title h4 p-0 m-0">{{this.title}}</h4>
                        <p class="card-text h5">${{this.price}}</p>
                    </div>
                    <div class="quantity d-flex justify-content-between pb-3 pt-3">
                        <p class="card-text h5 m-0">Cantidad:</p> 
                        <input class="w-25 text-center" type="number" min="1" value="{{this.quantity}}">
                    </div>
                    <button class="btn btn-danger">Eliminar</button>
                </div>
            </div>
            {{/each}}
        </div>

        <div class="order col-sm text-white pt-5">
            <h3 class="h3">TU ORDEN</h3>
            <p id="total"></p>
            <button class="btn btn-success">PAGAR</button>
        </div>
    </div>
</div>

<script src="http://localhost:8080/cartView.js"></script>